<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/white">

    <!-- 상품 이미지 -->
    <ImageView
        android:id="@+id/productImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_image_24"
        android:contentDescription=""/>

    <!-- 상품 내용 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:padding="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 상품 개요 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- 상품 이름 -->
                <TextView
                    android:id="@+id/productTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Product Name"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!-- 별점 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/star1"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/baseline_star_24" />

                    <ImageView
                        android:id="@+id/star2"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/baseline_star_24" />

                    <ImageView
                        android:id="@+id/star3"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/baseline_star_half_24" />

                    <ImageView
                        android:id="@+id/star4"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/baseline_star_border_24" />

                    <ImageView
                        android:id="@+id/star5"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/baseline_star_border_24" />

                    <TextView
                        android:id="@+id/startValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="4.5"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

                <!-- 상품 가격 -->
                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="\u20A9 25,000"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <!-- 변동률 정보 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="true">

                    <TextView
                        android:id="@+id/productChangeRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="10%"
                        android:textSize="14sp"
                        android:textColor="@android:color/holo_green_dark" />

                    <ImageView
                        android:id="@+id/productChangeRateArrow"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_keyboard_arrow_up_24" />
                </LinearLayout>

            </LinearLayout>

            <!-- 찜 하기 -->
            <ImageView
                android:id="@+id/productCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_add_shopping_cart_24"/>

        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/productChangeRateChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

</LinearLayout>
